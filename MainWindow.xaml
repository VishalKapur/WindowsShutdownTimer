<Window x:Class="WindowsShutdownTimer.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WindowsShutdownTimer"
        mc:Ignorable="d"
        Title="Windows Shutdown Timer" Height="450" Width="800">

    <Grid Margin="20">
        <Grid.RowDefinitions>
            <RowDefinition Height="*"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <!-- Title Text -->
        <TextBlock HorizontalAlignment="Center"
                   VerticalAlignment="Center"
                   TextWrapping="Wrap"
                   FontSize="36"
                   FontWeight="Bold">
            <Run Language="en-gb"
                 Text="Windows Shutdown Timer"/>
        </TextBlock>
        
         <!-- Mode drop-down -->
        <ComboBox Grid.Row="1"
                  HorizontalAlignment="Center"
                  VerticalAlignment="Center"
                  Width="260"
                  FontSize="20"
                  HorizontalContentAlignment="Center"
                  SelectionChanged="ComboBox_SelectionChanged"
                  SelectedIndex="0">

            <ComboBoxItem Content="Manual Countdown"/>

            <ComboBoxItem Content="Automatic Folder Tracking"/>
        </ComboBox>

        <StackPanel x:Name="ManualPanel" Grid.Row="2" Visibility="Hidden">
        
            <!-- Hours -->
            <StackPanel
                Orientation="Horizontal"
                HorizontalAlignment="Center"
                Margin="0,10">

                <TextBlock Text="Hours:"
                           FontSize="20"
                           Width="100"
                           VerticalAlignment="Center"/>

                <TextBox x:Name="HoursTextBox"
                         Text="0"
                         FontSize="20"
                         Width="100"
                         TextAlignment="Center"/>
            </StackPanel>

            <!-- Minutes -->
            <StackPanel 
                Orientation="Horizontal"
                HorizontalAlignment="Center"
                Margin="0,10">

                <TextBlock Text="Minutes:"
                           FontSize="20"
                           Width="100"
                           VerticalAlignment="Center"/>

                <TextBox x:Name="MinutesTextBox"
                         Text="0"
                         FontSize="20"
                         Width="100"
                         TextAlignment="Center"/>

            </StackPanel>

            <!-- Countdown -->
            <TextBlock x:Name="CountdownText"
                       Text="00:00:00"
                       FontSize="20"
                       HorizontalAlignment="Center">
                <Run Language="en-gb" />
            </TextBlock>
            
        </StackPanel>

        <StackPanel x:Name="AutoPanel" Grid.Row="2">
            
        </StackPanel>

        <!-- Buttons -->
        <StackPanel Grid.Row="4"
                    Orientation="Horizontal"
                    HorizontalAlignment="Center" Height="66" VerticalAlignment="Center">

            <!-- Start Button -->
            <Button
                Content="Start"
                HorizontalAlignment="Left"
                VerticalAlignment="Center"
                FontSize="20" 
                Width="110"
                Margin="10"
                Click="Start_Button_Click" TextBlock.FontSize="20"/>

            <!-- Cancel Button -->
            <Button
                Content="Cancel"
                HorizontalAlignment="Left"
                VerticalAlignment="Center"  
                FontSize="20"
                Width="110"
                Margin="10"
                Click="Cancel_Button_Click" TextBlock.FontSize="20"/>
        </StackPanel>

       
    </Grid>
</Window>
