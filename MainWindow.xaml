<Window x:Class="WindowsShutdownTimer.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WindowsShutdownTimer"
        mc:Ignorable="d"
        ResizeMode="NoResize"
        Title="Windows Shutdown Timer"
        Height="450"
        Width="800">

    <Grid Margin="20">
        <Grid.RowDefinitions>
            <RowDefinition Height="*"/>
            <RowDefinition Height="auto"/>
            <RowDefinition Height="auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <!-- Title Text -->
        <TextBlock HorizontalAlignment="Center"
                   VerticalAlignment="Center"
                   TextWrapping="Wrap"
                   FontSize="36"
                   FontWeight="Bold">
            <Run Language="en-gb"
                 Text="Windows Shutdown Timer"/>
        </TextBlock>

        <!-- Mode drop-down -->
        <ComboBox Grid.Row="1"
                  HorizontalAlignment="Center"
                  VerticalAlignment="Center"
                  Width="260"
                  FontSize="20"
                  HorizontalContentAlignment="Center"
                  SelectionChanged="ComboBox_SelectionChanged"
                  SelectedIndex="0"
                  Margin="20">

            <ComboBoxItem Content="Manual Countdown"/>

            <ComboBoxItem Content="Automatic Folder Tracking"/>
        </ComboBox>

        <!-- Manual Mode -->
        <StackPanel x:Name="ManualPanel" Grid.Row="2">

            <!-- Hours -->
            <StackPanel Orientation="Horizontal"
                        HorizontalAlignment="Center"
                        Margin="10">

                <TextBlock Text="Hours:"
                           FontSize="20"
                           Width="100"
                           VerticalAlignment="Center"/>

                <TextBox x:Name="HoursTextBox"
                         Text="0"
                         FontSize="20"
                         Width="100"
                         TextAlignment="Center"/>
            </StackPanel>

            <!-- Minutes -->
            <StackPanel Orientation="Horizontal"
                        HorizontalAlignment="Center"
                        Margin="10">

                <TextBlock Text="Minutes:"
                           FontSize="20"
                           Width="100"
                           VerticalAlignment="Center"
                           Margin="0,10,0,0"/>

                <TextBox x:Name="MinutesTextBox"
                         Text="0"
                         FontSize="20"
                         Width="100"
                         TextAlignment="Center"
                         Margin="0,10,0,0"/>
            </StackPanel>

            <!-- Countdown -->
            <TextBlock x:Name="CountdownText"
                       Text="00:00:00"
                       FontSize="20"
                       HorizontalAlignment="Center"
                       Margin="10,20,10,10">
                <Run Language="en-gb" />
            </TextBlock>

        </StackPanel>

        <!-- Auto Mode -->
        <StackPanel x:Name="AutoPanel" Grid.Row="2" Visibility="Hidden">

            <!-- Threshold -->
            <StackPanel Orientation="Horizontal"
                        HorizontalAlignment="Center">

                <TextBlock Text="Threshold (Minutes):"
                           FontSize="20"
                           Width="183"
                           Margin="10,0,10,10"/>

                <TextBox x:Name="ThresholdTextBox"
                     Text="10"
                     FontSize="20"
                     Width="100"
                     TextAlignment="Center"
                     VerticalAlignment="Top"/>
            </StackPanel>

            <!-- Folder Select -->
            <Button Content="Select Folder"
                    FontSize="20"
                    Width="130"
                    Margin="10"
                    Click="Select_Folder_Button_Click"/>

            <Border BorderBrush="Black" BorderThickness="1" Width="700" Margin="10">
                <TextBlock x:Name="PathText"
                           FontSize="20"
                           HorizontalAlignment="Center"
                           TextAlignment="Center"
                           Width="720"
                           TextWrapping="Wrap"/>
            </Border>

            <TextBlock x:Name="StatusText"
                       Text="Status: . . ."
                       FontSize="20"
                       Width="700"
                       TextAlignment="Center" Margin="0,5,0,0"/>
        </StackPanel>


        <!-- Buttons -->
        <StackPanel Grid.Row="3"
                    Orientation="Horizontal"
                    HorizontalAlignment="Center">

            <!-- Start Button -->
            <Button
                Content="Start"
                HorizontalAlignment="Left"
                FontSize="20" 
                Width="110"
                Click="Start_Button_Click"
                TextBlock.FontSize="20"
                VerticalAlignment="Center"
                Margin="0,0,10,0"/>

            <!-- Cancel Button -->
            <Button
                Content="Cancel"
                HorizontalAlignment="Left"
                VerticalAlignment="Center"  
                FontSize="20"
                Width="110"
                Click="Cancel_Button_Click"
                TextBlock.FontSize="20"
                Margin="10,0,0,0"/>
        </StackPanel>
    </Grid>
</Window>
