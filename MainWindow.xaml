<Window x:Class="WindowsShutdownTimer.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WindowsShutdownTimer"
        mc:Ignorable="d"
        Title="Windows Shutdown Timer" Height="450" Width="800">

    <Grid Margin="20,20,20,20" ShowGridLines="True">
        <Grid.RowDefinitions>
            <RowDefinition Height="*"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <!-- Title Text -->
        <TextBlock HorizontalAlignment="Center"
                   VerticalAlignment="Center"
                   TextWrapping="Wrap"
                   FontSize="36"
                   FontWeight="Bold">
            <Run Language="en-gb"
                 Text="Windows Shutdown Timer"/>
        </TextBlock>
        
        <!-- Hours -->
        <StackPanel Grid.Row="1"
            Orientation="Horizontal"
            HorizontalAlignment="Center"
            Margin="0,10">

            <TextBlock Text="Hours:"
               FontSize="18"
               Width="100"
               VerticalAlignment="Center"/>

            <TextBox x:Name="HoursTextBox"
             Width="100"
             FontSize="16"
             Text="0" TextAlignment="Center"
             VerticalAlignment="Center"/>
        </StackPanel>

        <!-- Minutes -->
        <StackPanel Grid.Row="2"
            Orientation="Horizontal"
            HorizontalAlignment="Center"
            Margin="0,10">

            <TextBlock Text="Minutes:"
               Width="100"
               VerticalAlignment="Center"
               FontSize="18"/>

            <TextBox x:Name="MinutesTextBox"
                Width="100"
                TextAlignment="Center"
                VerticalAlignment="Center"
                FontSize="16"
                Text="0"/>
                
        </StackPanel>

        <!-- Countdown -->
        <TextBlock x:Name="CountdownText" Grid.Row="3"
                   HorizontalAlignment="Center"
                   VerticalAlignment="Center"
                   TextWrapping="Wrap"
                   RenderTransformOrigin="0.102,0.469"
                   FontSize="20">
            <Run Language="en-gb" Text="00:00:00"/>
        </TextBlock>

        <!-- Buttons -->
        <StackPanel Grid.Row="4"
                    Orientation="Horizontal"
                    HorizontalAlignment="Center"
                    Margin="0,10">

            <!-- Start Button -->
            <Button Grid.Row="4"
                Content="Start"
                HorizontalAlignment="Left"
                VerticalAlignment="Center"
                FontSize="20" 
                Width="110"
                Margin="10"
                Click="Start_Button_Click"/>

            <!-- Cancel Button -->
            <Button Grid.Row="4"
                Content="Cancel"
                HorizontalAlignment="Left"
                VerticalAlignment="Center"  
                FontSize="20"
                Width="110"
                Margin="10"
                Click="Cancel_Button_Click"/>
        </StackPanel>
    </Grid>
</Window>
